{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>elastic/renovate-config"
  ],
  "schedule": [
    "* * * * 0"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "rangeStrategy": "bump",
      "automerge": false
    }
  ]
}
